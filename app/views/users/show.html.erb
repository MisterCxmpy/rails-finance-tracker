<h2>User Details</h2>

<div class="card card-header results-block">
  <table class="col-md-12">
    <tbody>
      <tr>
        <td><strong>Name: </strong> <%= @user.full_name %> <span>&nbsp;</span> </td>
        <td><strong>Email: </strong> <%= @user.email %> <span>&nbsp;</span> </td>
        <td>
          <% if current_user.not_friends_with?(@user.id) %>
            <%= link_to 'Follow friend?', friendships_path(friend: @user), class: "btn btn-sm btn-success", method: :post %>
          <% else %>
            <span class="badge badge-info">
              Friend
            </span>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>  
</div>

<% if !@tracked_stocks.empty? %>
  <%= render "stocks/list" %>
<% else %>
  <p class="lead">This user is not tracking any stocks</p>
<% end %>